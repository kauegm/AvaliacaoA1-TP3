@model Aplicacao_A1.Models.Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Detalhes do Pedido</h1>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Cliente:</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nome</dd>

            <dt class="col-sm-3 fw-bold">Data do Pedido:</dt>
            <dd class="col-sm-9">@Model.DataPedido.ToString("d")</dd>

            <dt class="col-sm-3 fw-bold">Total:</dt>
            <dd class="col-sm-9">@Model.Total.ToString("C")</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
