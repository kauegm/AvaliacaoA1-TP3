@model Aplicacao_A1.Models.Fornecedor

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Detalhes do Fornecedor</h1>

    <div class="card shadow-sm border-0 p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nome:</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3 fw-bold">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Telefone:</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3 fw-bold">Endereco:</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
