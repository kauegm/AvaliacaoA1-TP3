@model Aplicacao_A1.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Excluir Fornecedor</h1>

    <div class="card shadow-sm border-0 p-4">
        <h3 class="text-danger text-center">Tem certeza de que deseja excluir este fornecedor?</h3>
        <dl class="row mt-4">
            <dt class="col-sm-3 fw-bold">Nome:</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3 fw-bold">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Telefone:</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3 fw-bold">Endereco:</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
</div>
